{
  "expo": {
    "name": "Rock Crush",
    "slug": "rock-crush",
    "version": "1.0.0",
    "description": "A Candy Crush-style match-3 puzzle game featuring colorful rocks. Match 3+ rocks to score points! Choose between Premium subscription (ad-free, unlimited hints, exclusive features) or free version with occasional ads. Perfect for all ages!",
    "orientation": "portrait",
    "icon": "./assets/icon.svg",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.svg",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.rockcrush.app",
      "buildNumber": "1"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.svg",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.rockcrush.app",
      "permissions": [
        "VIBRATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE",
        "BILLING"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.svg",
      "bundler": "metro"
    },
    "platforms": ["ios", "android", "web"],

    "extra": {
      "eas": {
        "projectId": "rock-crush-project"
      }
    }
  }
}