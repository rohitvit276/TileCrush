{
  "expo": {
    "name": "Temple Runner 3D",
    "slug": "temple-runner-3d",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.svg",
    "userInterfaceStyle": "dark",
    "splash": {
      "image": "./assets/splash.svg",
      "resizeMode": "contain",
      "backgroundColor": "#1a1a2e"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": false,
      "bundleIdentifier": "com.templerunner3d.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.svg",
        "backgroundColor": "#1a1a2e"
      },
      "package": "com.templerunner3d.app",
      "permissions": [
        "VIBRATE",
        "INTERNET",
        "ACCESS_NETWORK_STATE"
      ],
      "versionCode": 1
    },
    "web": {
      "favicon": "./assets/favicon.svg",
      "bundler": "metro"
    },
    "platforms": ["ios", "android", "web"],

    "extra": {
      "eas": {
        "projectId": "temple-runner-3d-project"
      }
    }
  }
}