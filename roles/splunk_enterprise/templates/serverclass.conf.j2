# serverclass.conf - Deployment Server Configuration
# Generated by Ansible on {{ ansible_date_time.iso8601 }}

{% for serverclass in deployment_server_classes %}
[serverClass:{{ serverclass.name }}]
{% if serverclass.whitelist is defined %}
whitelist.0 = {{ serverclass.whitelist }}
{% endif %}
{% if serverclass.blacklist is defined %}
blacklist.0 = {{ serverclass.blacklist }}
{% endif %}

{% for app in serverclass.apps %}
[serverClass:{{ serverclass.name }}:app:{{ app }}]
restartSplunkWeb = false
restartSplunkd = true
stateOnClient = enabled

{% endfor %}
{% endfor %}

# Global deployment server settings
[global]
crossServerChecksum = true
